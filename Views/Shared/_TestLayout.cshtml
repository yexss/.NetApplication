<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- CSS only -->
    <link 
        rel="stylesheet" 
        integrity="sha384-rTTiRUKnSWaDu2FjhzWFl8/JuUZMlplyWE/djenb2LoKqkgLGfEGfSrL7XDLoB1M" 
        crossorigin="anonymous"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
        asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
        asp-fallback-test-class="sr-only"
        asp-fallback-test-property="position"
        asp-fallback-test-value="absolute"
    >

    <!-- JavaScript Bundle with Popper -->
    <script 
        integrity="sha384-Nj1D6pu2WnJojj+67GiU9ZFNwbl7bUWX5Kj5MS22C8bGjllemM9pvQyvj14zJb58" 
        crossorigin="anonymous"
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
        asp-fallback-src="~/lib/bootstrap/js/bootstrap.bundle.min.js"
    ></script>


</head>
<body>
    <div>
        @RenderBody()
    </div>


    @if (IsSectionDefined("Js"))
    {
        @RenderSection("Js",required:false)
        @*解决页面差异化*@
    }
    else
    {
        <p>SubMenu Section is not defined!</p>
    }

    <environment include="Staging,Production">
        Staging,Production
        exclude相反
    </environment>
</body>
</html>
